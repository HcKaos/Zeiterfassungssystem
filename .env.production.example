# Production Environment Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (Use secure values)
DB_HOST=your-production-db-host
DB_USER=app_user
DB_PASSWORD=CHANGE_TO_STRONG_PASSWORD_32_CHARS_MIN
DB_NAME=Zeiterfassung

# Admin User Configuration
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=CHANGE_TO_STRONG_PASSWORD
ADMIN_FIRSTNAME=Admin
ADMIN_LASTNAME=User
MAIN_ADMIN_EMAIL=admin@yourcompany.com

# Session Configuration (CRITICAL: Generate strong random string)
SESSION_SECRET=CHANGE_TO_STRONG_RANDOM_SECRET_MIN_32_CHARS

# Production Frontend Origin
FRONTEND_ORIGIN=https://yourdomain.com

# Timezone Configuration
TZ=Europe/Berlin

# Production Security Settings
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Optional: Database SSL Configuration
DB_SSL_CA=/path/to/ca-cert.pem
DB_SSL_CERT=/path/to/client-cert.pem
DB_SSL_KEY=/path/to/client-key.pem